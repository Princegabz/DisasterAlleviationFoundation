@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Allocation Page";
}


<body style="background-color: mediumpurple;">

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6">

                <div class="text-center" style="margin-top:4%">
                    <h1 style="color:white;" class="display-4">Allocation Page</h1>
                </div>
                <div class="text-center" style="margin-top:4%">
                    <br/>
                    <div style="width: 600px; background-color: orange; backdrop-filter: blur(10px); box-shadow: 0 0 40px rgba(8,7,16,0.16); border-radius: 0px; padding: 50px 35px;">
                        <h2>Monetary Allocations</h2>
                        <form asp-controller="Home" asp-action="CaptureMonetaryAllocations" method="post">
                            <div class="form-row">
                                <div class="form-group text-left">
                                    <label for="inputEmail4">Amount</label>
                                    <input type="number" class="form-control" name="AllocationAmount" id="AllocationAmount" placeholder="R" required>
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="inputDescription">Description of the disaster</label>
                                    @if (ViewBag.DisasterNames != null)
                                    {
                                        <select class="form-control" name="DisasterName" required>
                                            @foreach (var disasterName in ViewBag.DisasterNames)
                                            {
                                                <option value="@disasterName">@disasterName</option>
                                            }
                                        </select>
                                    }
                                    else
                                    {
                                        <p>Allocation is Successfull.</p>
                                    }
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary" style="background-color:mediumpurple;">Submit</button>
                        </form>
                    </div>
                    <br />

                    <div style="width: 600px; background-color: orange; backdrop-filter: blur(10px); box-shadow: 0 0 40px rgba(8,7,16,0.16); border-radius: 0px; padding: 50px 35px;">
                        <h2>Goods Allocations</h2>
                        <form asp-controller="Home" asp-action="CaptureGoodsAllocations" method="post">
                            <div class="form-row">
                                <div class="form-group text-left">
                                    <label for="inputItems">Number of Items</label>
                                    <input type="number" class="form-control" name="AllocationAmount" id="AllocationAmount" placeholder="Number of Items">
                                </div>
                            </div>
                            <div class="form-group text-left">
                                <label for="category">Category</label>
                                <select class="form-control" id="Category" name="Category" required>
                                    <option value="Clothes">Clothes</option>
                                    <option value="Non-perishable Foods">Non-perishable Foods</option>
                                    <option value="Household Items">Household Items</option>
                                    <option value="Electronics">Electronics</option>
                                    <option value="Toys and Games">Toys and Games</option>
                                    <option value="Toiletries">Toiletries</option>
                                    <option value="Stationery">Stationery</option>
                                    <option value="Medical Supplies">Medical Supplies</option>
                                    <option value="Educational Materials">Educational Materials</option>
                                    <option value="Other">Other</option>
                                </select>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="inputDescription">Description of the disaster</label>
                                @if (ViewBag.DisasterNames != null)
                                {
                                    <select class="form-control" name="DisasterName" required>
                                        @foreach (var disasterName in ViewBag.DisasterNames)
                                        {
                                            <option value="@disasterName">@disasterName</option>
                                        }
                                    </select>
                                }
                                else
                                {
                                    <p>Allocation is Successfull.</p>
                                }
                            </div>
                            <div class="form-group">
                                <div class="form-check">
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary" style="background-color: mediumpurple;">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>