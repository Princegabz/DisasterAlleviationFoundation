<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Disaster Alleviation</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>

        body {
            font-family: 'Poppins', sans-serif;
        }

        .headline {
            font-size: 50px;
            text-align: center;
        }

        .subline {
            font-size: 25px;
            text-align: center;
            margin-bottom: 125px;
        }

        .subline a {
             color: #000a0f;
             text-decoration: none;
             border-bottom: solid 3px #000a0f;
             padding: 0 5px;
             transition: 0.75s;
        }

        .subline a:hover {
             background: #000a0f;
             color: #fff;
        }

        .button-group {
            width: 100%;
            text-align: center;
            top: 5%;
        }

        .button-group a {
            padding: 10px 30px;
            margin: 1em;
            border-radius: 5px;
            text-decoration: none;
            transition: 0.5s ease-in-out;
        }

        .btn {
            color: #FFF;
            font-size: 20px;
        }
        .btn1 {
            background-color: #f1c40f;
        }

        .btn1:hover {
            box-shadow: 0px 0px 0px 2.5px #fff, 0px 0px 0px 5px #f1c40f, 0px 0px 0px 10px transparent, 0px 0px 0px 10.5px #f1c40f;
            background: transparent;
            color: #f1c40f;
        }

        

    </style>
</head>
<body>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted  text-light" style="background-color:rebeccapurple;">
        <div class="container">
            &copy; 2022 - DisasterAlleviation - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
